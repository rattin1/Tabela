@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <p class="titulo-criar fw-bold">Produtos</p>

    <hr class="border border-dark border-1">

    <h4 class="cadastro">Editar Produto</h4>

    <div class="row crow">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-box-container form-group mb-2">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="text-box-input form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="row crow">
                    <div class="col-12 col-md-6 text-box-container mb-2">
                        <label asp-for="Preco" class="control-label"></label>
                        <input asp-for="Preco" class="text-box-input form-control" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 text-box-container">
                        <label asp-for="Estoque" class="control-label"></label>
                        <input asp-for="Estoque" class="text-box-input form-control" />
                        <span asp-validation-for="Estoque" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-box-container form-group mb-2">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="text-box-input form-control" asp-items="ViewBag.CategoriaId"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <div class="row crow">
                        <div class="col col-md-6 mt-4 form-group">
                            <input type="submit" value="Editar" class="botao-criar fw-semibold" />
                        </div>

                        <div class="col col-md-6 mt-4 d-flex justify-content-end">
                            <a class="botao-cancelar m-0 p-0 fw-semibold" asp-action="Index">Cancelar</a>
                        </div>
                    </div>


                </div>

            </form>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <link rel="stylesheet" href="~/css/site.css" />


</div>
