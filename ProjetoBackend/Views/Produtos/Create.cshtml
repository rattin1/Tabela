                @model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Criar";
}
<div class="container">

    <p class="titulo-criar fw-bold">Produtos</p>

    <hr class="border border-dark border-1">

    <h4 class="cadastro">Cadastro de Produtos</h4>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-box-container form-group mb-2">
                    <input asp-for="Nome" class="text-box-input form-control" placeholder="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6 text-box-container mb-2">
                        <input type="" asp-for="Preco" class="text-box-input form-control" placeholder="Preço" />
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 text-box-container">
                        <input asp-for="Estoque" class="text-box-input form-control" placeholder="Estoque" />
                        <span asp-validation-for="Estoque" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-box-container form-group mb-2">
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <div class="row">
                        <div class="col col-md-6 mt-4 form-group">
                            <input type="submit" value="Criar" class="botao-criar fw-semibold" />
                        </div>

                        <div class="col col-md-6 mt-4 d-flex justify-content-end">
                            <a class="botao-cancelar m-0 p-0 fw-semibold" asp-action="Index">Cancelar</a>
                        </div>
                    </div>

                </div>

            </form>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <link rel="stylesheet" href="~/css/site.css" />


</div>
