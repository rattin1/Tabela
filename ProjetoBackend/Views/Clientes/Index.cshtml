@model IEnumerable<ProjetoBackend.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container">
    <p class="titulo-cliente fw-bold">Clientes</p>
    <form asp-action="Search" class="search-container text-end" method="get">
        <input type="text" name="nome" placeholder="Buscar cliente..." class="search-input" />
        <button type="submit" class="search-button"><ion-icon name="search"></ion-icon></button>
    </form>



    <table>
        <thead>
            <tr>
                <th style="text-align: right;">@Html.DisplayNameFor(model => model.Nome)</th>
                <th style="text-align: right;">@Html.DisplayNameFor(model => model.Email)</th>
                <th style="text-align: right;">@Html.DisplayNameFor(model => model.CnpjCpf)</th>
                <th style="text-align: right;">@Html.DisplayNameFor(model => model.Celular)</th>
                <th style="text-align: right;">@Html.DisplayNameFor(model => model.DataNascimento)</th>
                <th style="text-align: right;">@Html.DisplayNameFor(model => model.DataCadastro)</th>
                <th style="text-align: right;">@Html.DisplayNameFor(model => model.CadastroAtivo)</th>

            </tr>
        </thead>
        <tbody style="background: #F8F8F8">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.CnpjCpf)</td>
                    <td>@Html.DisplayFor(modelItem => item.Celular)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataCadastro)</td>
                    <td>@Html.DisplayFor(modelItem => item.CadastroAtivo)</td>

                </tr>
            }
        </tbody>
    </table>



    <p>
        <a asp-action="Create" class="botao-criar btn fw-bold">Criar</a>
    </p>

</div>