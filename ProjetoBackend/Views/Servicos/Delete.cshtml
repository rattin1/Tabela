@model ProjetoBackend.Models.Servico

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row crow">
        <div class="col-12 col-md-1 col-lg-2"> </div>
        <div class="col-12 col-md">
            <p class="titulo-criar fw-bold">Serviços</p>
            <hr class="border border-dark border-1">
            <h4 class="cadastro fw-medium ">Excluir Serviço</h4>

            <div class="row crow">
                <div class="titulodelete fw-bold col-2 mb-3">@Html.DisplayNameFor(model => model.Nome):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.Nome)</div>
            </div>
            <div class="row crow">
                <div class="titulodelete fw-bold col-sm-2 mb-5">@Html.DisplayNameFor(model => model.ValorServico):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.ValorServico)</div>
            </div>


            <div class="form-group">

                <input type="hidden" asp-for="ServicoId" class="form-control" />

                <div class="row crow">
                    <div class="col-12 col-md-6 mt-4 form-group w-100">
                        <form asp-action="Delete">
                            <input type="submit" value="Excluir" class="botao-criar fw-semibold" />
                        </form>
                    </div>

                    <div class="col-12 col-md-6 mt-4 d-flex w-100 justify-content-end ">
                        <a class="botao-cancelar m-0 p-0 fw-semibold" asp-action="Index">Cancelar</a>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-12 col-md-1 col-lg-2"> </div>

    </div>
</div>
