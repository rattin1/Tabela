@model ProjetoBackend.Models.Venda

@{
    ViewData["Title"] = "Deletar";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-1 col-lg-2"> </div>
        <div class="col-12 col-md">
            <p class="titulo-criar fw-bold">Vendas</p>
            <hr class="border border-dark border-1">
            <h4 class="cadastro fw-medium ">Excluir Vendas</h4>

            <div class="row">
                <div class="titulodelete fw-bold col-2 mb-3">@Html.DisplayNameFor(model => model.NotaFiscal):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.NotaFiscal)</div>
            </div>
            <div class="row">
                <div class="titulodelete fw-bold col-sm-2 mb-3">@Html.DisplayNameFor(model => model.Cliente):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.Cliente.Celular)</div>
            </div>
            <div class="row">
                <div class="titulodelete fw-bold col-sm-2 mb-3">@Html.DisplayNameFor(model => model.DataVenda):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.DataVenda)</div>
            </div>
            <div class="row">
                <div class="titulodelete fw-bold col-sm-2 mb-3">@Html.DisplayNameFor(model => model.ValorTotal):</div>
                <div class="conteudodelete col">@Html.DisplayFor(model => model.ValorTotal)</div>
            </div>



            <input type="hidden" asp-for="VendaId" class="form-control" />



            <div class="row crow">
                <div class="col col-md-6 mt-4 form-group">
                    <form asp-action="Delete">
                        <input type="submit" value="Excluir" class="botao-criar fw-semibold" />
                    </form>
                </div>

                <div class="col col-md-6 mt-4 d-flex justify-content-end">
                    <a class="botao-cancelar m-0 p-0 fw-semibold" asp-action="Index">Cancelar</a>
                </div>
            </div>


        </div>
        <div class="col-12 col-md-1 col-lg-2"> </div>

    </div>
</div>
